<h1><%= t("activerecord.models.userPlural") %></h1>

<table class="mmTable">

<tr>
	<th><%= t("activerecord.attributes.user.username") %></th>
	<th><%= t("activerecord.attributes.user.email") %></th>
	<th><%= t("activerecord.attributes.user.firstName") %></th>
	<th><%= t("activerecord.attributes.user.lastName") %></th>
	<th><%= t("activerecord.attributes.user.sex") %></th>
	<th><%= t("activerecord.attributes.user.birthdate") %></th>
	<th colspan="3"></th>
</tr>

<% @users.each do |user| %>
	<tr>
		<td><%= user.username %></td>
		<td><%= user.email %></td>
		<td><%= user.firstName %></td>
		<td><%= user.lastName %></td>
		<td><%= user.sex %></td>
		<td><%= user.birthdate %></td>
		<td><%= link_to content_tag(:span, "", class: "ui-icon ui-icon-folder-open", title: "Benutzer anzeigen"), user %></td>
		<td><%= link_to content_tag(:span, "", class: "ui-icon ui-icon-wrench", title: "Benutzer bearbeiten"), edit_user_path(user) %></td>
		<td>
			<%= link_to content_tag(:span, "", class: "ui-icon ui-icon-trash", title: "Benutzer entfernen"), user, method: :delete, data: { confirm: t("destroy.ensuring") } %>
		</td>
	</tr>
<% end %>

</table>
